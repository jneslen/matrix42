# Turn on URL rewriting
RewriteEngine On

RewriteCond %{HTTP_HOST} ^matrix42\.(com|de|eu)$ [NC]
RewriteRule ^(.*)$ http://www.matrix42\.(com|de|eu)/$1 [R=301,L]

# Installation directory
RewriteBase /

